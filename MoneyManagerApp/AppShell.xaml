<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MoneyManagerApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MoneyManagerApp"
    xmlns:views="clr-namespace:MoneyManagerApp.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Info"
            ContentTemplate="{DataTemplate views:EditInfoPage}"
            Route="EditInfoPage" />
    </TabBar>

</Shell>
